<h2>Thematic Modules</h2>
<hr>
    <div class="row">

        <div class="col-lg-12">


            <!-- Modules -->
            <div class="row modules-list-holder">
                <div class="col-xs-12">
                    <ul id="modules-list" class="list-unstyled">
                        {{#each modules}}
                                <li class="row module-group-item">
                                    <div class="col-xs-6">
                                        <a target="_blank" href={{isI18n link}}><img class="img-responsive" src="{{ img}}"></a>
                                    </div>
                                    <div class="col-xs-6">
                                        <h2>{{i18n title}}</h2>
                                        <p>{{{i18n body}}}</p>
                                    </div>
                                </li><br><hr>
                            {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

